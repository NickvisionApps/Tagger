<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="NickvisionTagger.WinUI.Controls.MusicFileRow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NickvisionTagger.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wct="using:CommunityToolkit.WinUI.Controls"
    mc:Ignorable="d">

    <StackPanel Orientation="Vertical">
        <Grid Margin="4,6,0,6" ColumnSpacing="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <FontIcon x:Name="UnsaveIcon" Grid.Column="0" Margin="-12,-12,0,0" FontFamily="{StaticResource SymbolThemeFontFamily}" FontSize="16" Glyph="&#xF83F;"/>

            <StackPanel Grid.Column="1" Orientation="Vertical" Spacing="6">
                <TextBlock x:Name="TxtTitle"/>

                <TextBlock x:Name="TxtSubtitle" Foreground="Gray"/>
            </StackPanel>
        </Grid>

        <MenuFlyoutSeparator HorizontalAlignment="Stretch" VerticalAlignment="Bottom"/>
    </StackPanel>
</UserControl>
