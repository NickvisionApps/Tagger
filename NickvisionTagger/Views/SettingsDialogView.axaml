<ui:ContentDialog xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             xmlns:i="using:Avalonia.Xaml.Interactivity"
             xmlns:ia="using:Avalonia.Xaml.Interactions.Core"
             x:Class="NickvisionTagger.Views.SettingsDialogView"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             Name="SettingsDialog" Title="{Binding Title}" 
             CloseButtonText="Close" DefaultButton="Close" CloseButtonCommand="{Binding CloseCommand}">
    <i:Interaction.Behaviors>
        <ia:EventTriggerBehavior EventName="Opened" SourceObject="{Binding #SettingsDialog}">
            <ia:InvokeCommandAction Command="{Binding OpenedCommand}" />
        </ia:EventTriggerBehavior>
    </i:Interaction.Behaviors>
    
    <ScrollViewer>
        <StackPanel Orientation="Vertical" Spacing="6">
            <Expander IsExpanded="True">
                <Expander.Header>
                    <StackPanel Orientation="Horizontal">
                        <ui:SymbolIcon Symbol="Page"/>

                        <TextBlock Margin="6,0,0,0" Text="User Interface"/>
                    </StackPanel>
                </Expander.Header>

                <Expander.Content>
                    <StackPanel Spacing="6">
                        <RadioButton Content="Light" IsChecked="{Binding IsLightTheme}"/>

                        <RadioButton Content="Dark" IsChecked="{Binding IsDarkTheme}"/>

                        <TextBlock Margin="0,10,0,0" Text="Accent Color"/>

                        <ComboBox Width="300" PlaceholderText="Select accent color" Items="{Binding AccentColors}" SelectedItem="{Binding AccentColor}"/>
                    </StackPanel>
                </Expander.Content>
            </Expander>

            <Expander IsExpanded="True">
                <Expander.Header>
                    <StackPanel Orientation="Horizontal">
                        <ui:SymbolIcon Symbol="Edit"/>

                        <TextBlock Margin="6,0,0,0" Text="Application"/>
                    </StackPanel>
                </Expander.Header>

                <Expander.Content>
                    <StackPanel Spacing="6">
						
                    </StackPanel>
                </Expander.Content>
            </Expander>
        </StackPanel>
    </ScrollViewer>
</ui:ContentDialog>
