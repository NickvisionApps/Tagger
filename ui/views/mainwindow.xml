<?xml version="1.0" encoding="UTF-8"?>
<interface>
    <object class="AdwApplicationWindow" id="adw_winMain">
        <property name="default-width">800</property>
        <property name="default-height">600</property>
        <child>
            <object class="GtkBox">
                <property name="orientation">vertical</property>
                <child>
                    <object class="AdwHeaderBar" id="adw_headerBar">
                        <property name="title-widget">
                            <object class="AdwWindowTitle" id="adw_title">
                                <property name="title">Tagger</property>
                            </object>
                        </property>
                        <child type="start">
                            <object class="GtkButton" id="gtk_btnOpenMusicFolder">
                                <property name="action-name">win.openMusicFolder</property>
                                <property name="tooltip-text" translatable="yes">Open Music Folder (Ctrl+O)</property>
                                <property name="child">
                                    <object class="AdwButtonContent">
                                        <property name="icon-name" translatable="yes">folder-open-symbolic</property>
                                        <property name="label" translatable="yes">Open</property>
                                    </object>
                                </property>
                            </object>
                        </child>
                        <child type="start">
                            <object class="GtkButton" id="gtk_btnReloadMusicFolder">
                                <property name="action-name">win.reloadMusicFolder</property>
                                <property name="icon-name">view-refresh-symbolic</property>
                                <property name="tooltip-text" translatable="yes">Reload Music Folder (F5)</property>
                                <property name="visible">false</property>
                            </object>
                        </child>
                        <child type="end">
                            <object class="GtkMenuButton" id="gtk_btnMenuHelp">
                                <property name="direction">none</property>
                                <property name="tooltip-text">Main Menu</property>
                            </object>
                        </child>
                        <child type="end">
                            <object class="GtkSeparator">
                                <style>
                                    <class name="spacer"></class>
                                </style>
                            </object>
                        </child>
                        <child type="end">
                            <object class="GtkButton" id="gtk_btnSaveTags">
                                <style>
                                    <class name="suggested-action"></class>
                                </style>
                                <property name="action-name">win.saveTags</property>
                                <property name="label" translatable="yes">Apply</property>
                                <property name="tooltip-text" translatable="yes">Save Tags (Ctrl+S)</property>
                                <property name="visible">false</property>
                            </object>
                        </child>
                        <child type="end">
                            <object class="GtkMenuButton" id="gtk_btnMenuTagActions">
                                <property name="direction">none</property>
                                <property name="icon-name">document-properties-symbolic</property>
                                <property name="tooltip-text">Tag Actions</property>
                                <property name="visible">false</property>
                            </object>
                        </child>
                    </object>
                </child>
                <child>
                    <object class="AdwToastOverlay" id="adw_toastOverlay">
                        <property name="hexpand">true</property>
                        <property name="vexpand">true</property>
                        <child>
                            <object class="AdwViewStack" id="adw_viewStack">
                                <child>
                                    <object class="AdwViewStackPage">
                                        <property name="name">page_noFiles</property>
                                        <property name="child">
                                            <object class="AdwStatusPage" id="adw_pageNoFiles">
                                                <property name="icon-name">org.nickvision.tagger-symbolic</property>
                                                <property name="title">No Music Files Found</property>
                                                <property name="description">Open a folder with music files inside to get started.</property>
                                            </object>
                                        </property>
                                    </object>
                                </child>
                                <child>
                                    <object class="AdwViewStackPage">
                                        <property name="name">page_tagger</property>
                                        <property name="child">
                                            <object class="AdwFlap" id="adw_flap">
                                                <property name="flap-position">end</property>
                                                <property name="fold-policy">never</property>
                                                <property name="reveal-flap">false</property>
                                                <property name="content">
                                                    <object class="GtkScrolledWindow">
                                                        <child>
                                                            <object class="GtkListBox" id="gtk_listMusicFiles">
                                                                <property name="margin-start">10</property>
                                                                <property name="margin-top">10</property>
                                                                <property name="margin-end">10</property>
                                                                <property name="margin-bottom">10</property>
                                                                <style>
                                                                    <class name="boxed-list"></class>
                                                                </style>
                                                                <property name="selection-mode">multiple</property>
                                                            </object>
                                                        </child>
                                                    </object>
                                                </property>
                                                <property name="separator">
                                                    <object class="GtkSeparator"></object>
                                                </property>
                                                <property name="flap">
                                                    <object class="GtkScrolledWindow">
                                                        <property name="width-request">420</property>
                                                        <child>
                                                            <object class="GtkBox">
                                                                <property name="margin-start">10</property>
                                                                <property name="margin-top">10</property>
                                                                <property name="margin-end">10</property>
                                                                <property name="margin-bottom">10</property>
                                                                <property name="orientation">vertical</property>
                                                                <property name="spacing">6</property>
                                                                <child>
                                                                    <object class="GtkLabel">
                                                                        <property name="halign">start</property>
                                                                        <property name="label" translatable="yes">Filename</property>
                                                                    </object>
                                                                </child>
                                                                <child>
                                                                    <object class="GtkEntry" id="gtk_txtFilename">
                                                                        <property name="margin-bottom">6</property>
                                                                        <property name="placeholder-text" translatable="yes">Enter filename here</property>
                                                                    </object>
                                                                </child>
                                                                <child>
                                                                    <object class="GtkLabel">
                                                                        <property name="halign">start</property>
                                                                        <property name="label" translatable="yes">Title</property>
                                                                    </object>
                                                                </child>
                                                                <child>
                                                                    <object class="GtkEntry" id="gtk_txtTitle">
                                                                        <property name="margin-bottom">6</property>
                                                                        <property name="placeholder-text" translatable="yes">Enter title here</property>
                                                                    </object>
                                                                </child>
                                                                <child>
                                                                    <object class="GtkLabel">
                                                                        <property name="halign">start</property>
                                                                        <property name="label" translatable="yes">Artist</property>
                                                                    </object>
                                                                </child>
                                                                <child>
                                                                    <object class="GtkEntry" id="gtk_txtArtist">
                                                                        <property name="margin-bottom">6</property>
                                                                        <property name="placeholder-text" translatable="yes">Enter artist here</property>
                                                                    </object>
                                                                </child>
                                                                <child>
                                                                    <object class="GtkLabel">
                                                                        <property name="halign">start</property>
                                                                        <property name="label" translatable="yes">Album</property>
                                                                    </object>
                                                                </child>
                                                                <child>
                                                                    <object class="GtkEntry" id="gtk_txtAlbum">
                                                                        <property name="margin-bottom">6</property>
                                                                        <property name="placeholder-text" translatable="yes">Enter album here</property>
                                                                    </object>
                                                                </child>
                                                                <child>
                                                                    <object class="GtkLabel">
                                                                        <property name="halign">start</property>
                                                                        <property name="label" translatable="yes">Year</property>
                                                                    </object>
                                                                </child>
                                                                <child>
                                                                    <object class="GtkEntry" id="gtk_txtYear">
                                                                        <property name="margin-bottom">6</property>
                                                                        <property name="placeholder-text" translatable="yes">Enter year here</property>
                                                                    </object>
                                                                </child>
                                                                <child>
                                                                    <object class="GtkLabel">
                                                                        <property name="halign">start</property>
                                                                        <property name="label" translatable="yes">Track</property>
                                                                    </object>
                                                                </child>
                                                                <child>
                                                                    <object class="GtkEntry" id="gtk_txtTrack">
                                                                        <property name="margin-bottom">6</property>
                                                                        <property name="placeholder-text" translatable="yes">Enter track here</property>
                                                                    </object>
                                                                </child>
                                                                <child>
                                                                    <object class="GtkLabel">
                                                                        <property name="halign">start</property>
                                                                        <property name="label" translatable="yes">Album Artist</property>
                                                                    </object>
                                                                </child>
                                                                <child>
                                                                    <object class="GtkEntry" id="gtk_txtAlbumArtist">
                                                                        <property name="margin-bottom">6</property>
                                                                        <property name="placeholder-text" translatable="yes">Enter album artist here</property>
                                                                    </object>
                                                                </child>
                                                                <child>
                                                                    <object class="GtkLabel">
                                                                        <property name="halign">start</property>
                                                                        <property name="label" translatable="yes">Genre</property>
                                                                    </object>
                                                                </child>
                                                                <child>
                                                                    <object class="GtkEntry" id="gtk_txtGenre">
                                                                        <property name="margin-bottom">6</property>
                                                                        <property name="placeholder-text" translatable="yes">Enter genre here</property>
                                                                    </object>
                                                                </child>
                                                                <child>
                                                                    <object class="GtkLabel">
                                                                        <property name="halign">start</property>
                                                                        <property name="label" translatable="yes">Comment</property>
                                                                    </object>
                                                                </child>
                                                                <child>
                                                                    <object class="GtkEntry" id="gtk_txtComment">
                                                                        <property name="margin-bottom">6</property>
                                                                        <property name="placeholder-text" translatable="yes">Enter comment here</property>
                                                                    </object>
                                                                </child>
                                                                <child>
                                                                    <object class="GtkLabel">
                                                                        <property name="halign">start</property>
                                                                        <property name="label" translatable="yes">Duration</property>
                                                                    </object>
                                                                </child>
                                                                <child>
                                                                    <object class="GtkEntry" id="gtk_txtDuration">
                                                                        <property name="margin-bottom">6</property>
                                                                        <property name="placeholder-text" translatable="yes">00:00:00</property>
                                                                        <property name="editable" translatable="yes">false</property>
                                                                    </object>
                                                                </child>
                                                                <child>
                                                                    <object class="GtkLabel">
                                                                        <property name="halign">start</property>
                                                                        <property name="label" translatable="yes">File Size</property>
                                                                    </object>
                                                                </child>
                                                                <child>
                                                                    <object class="GtkEntry" id="gtk_txtFileSize">
                                                                        <property name="margin-bottom">6</property>
                                                                        <property name="placeholder-text" translatable="yes">0 MB</property>
                                                                        <property name="editable" translatable="yes">false</property>
                                                                    </object>
                                                                </child>
                                                                <child>
                                                                    <object class="GtkLabel">
                                                                        <property name="halign">start</property>
                                                                        <property name="label" translatable="yes">Album Art</property>
                                                                    </object>
                                                                </child>
                                                                <child>
                                                                    <object class="GtkFrame">
                                                                        <child>
                                                                            <object class="GtkImage" id="gtk_imgAlbumArt">
                                                                                <property name="width-request">380</property>
                                                                                <property name="height-request">380</property>
                                                                            </object>
                                                                        </child>
                                                                    </object>
                                                                </child>
                                                            </object>
                                                        </child>
                                                    </object>
                                                </property>
                                            </object>
                                        </property>
                                    </object>
                                </child>
                            </object>
                        </child>
                    </object>
                </child>
            </object>
        </child>
    </object>
</interface>
