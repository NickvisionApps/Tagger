<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>org.nickvision.tagger</id>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>MIT</project_license>
  <name>Tagger</name>
  <project_group>Nickvision</project_group>
  <developer_name>Nickvision</developer_name>
  <summary>Tag your music</summary>
  <description>
    <p>— Support for many music file types (mp3, ogg, flac, wma, wav, and more)</p>
    <p>— Edit tags and album art of multiple files, even across subfolders, all at once</p>
    <p>— Edit unsynchronized and synchronized lyrics for a file (with LRC import and export support)</p>
    <p>— Convert filenames to tags and tags to filenames with ease</p>
    <p>— Lookup file information using MusicBrainz</p>
    <p>— Lookup lyric information using Music163 and Letras</p>
    <p>— Open, manage, and create playlists in many formats (m3u, pls, xspf, and more)</p>
  </description>
  <launchable type="desktop-id">org.nickvision.tagger.desktop</launchable>
