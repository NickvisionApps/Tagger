{
    "app-id" : "org.nickvision.tagger",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "43",
    "sdk" : "org.gnome.Sdk",
    "command" : "org.nickvision.tagger",
    "finish-args":[
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--share=ipc",
        "--share=network",
        "--filesystem=home"
    ],
    "cleanup":[
    	"/include",
	    "/lib/pkgconfig",
    	"*.a"
    ],
    "modules" : [
        {
            "name": "jsoncpp",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/open-source-parsers/jsoncpp.git",
                    "tag": "1.9.5"
                }
            ]
        },
        {
            "name": "curlpp",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/jpbarrette/curlpp.git",
                    "tag": "v0.8.1"
                }
            ]
        },
        {
            "name": "taglib",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/taglib/taglib.git",
                    "tag": "v1.12"
                }
            ]
        },
        {
            "name": "org.nickvision.tagger",
            "buildsystem": "meson",
            "config-opts": [
                "-Dbuildtype=release"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/nlogozzo/NickvisionTagger.git",
                    "tag": "2022.11.1"
                }
            ]
        }
    ]
}