{
    "app-id" : "org.nickvision.tagger",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "42",
    "sdk" : "org.gnome.Sdk",
    "command" : "org.nickvision.tagger",
    "finish-args":[
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--share=ipc",
        "--share=network",
        "--filesystem=host"
    ],
    "modules" : [
    	{
            "name": "libadwaita",
            "buildsystem": "meson",
            "config-opts": [
                "-Dvapi=false",
                "-Dtests=false",
                "-Dexamples=false",
                "-Dintrospection=enabled"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/GNOME/libadwaita.git",
                    "tag": "1.2.0"
                }
            ],
            "modules": [
                {
                    "name": "sassc",
                    "sources": [
                        {
                            "type": "git",
                            "url": "https://github.com/sass/sassc.git",
                            "tag": "3.6.2"
                        },
                        {
                            "type": "script",
                            "dest-filename": "autogen.sh",
                            "commands": [
                                "autoreconf -si"
                            ]
                        }
                    ],
                    "cleanup": [
                        "*"
                    ],
                    "modules": [
                        {
                            "name": "libsass",
                            "sources": [
                                {
                                    "type": "git",
                                    "url": "https://github.com/sass/libsass.git",
                                    "tag": "3.6.5"
                                },
                                {
                                    "type": "script",
                                    "dest-filename": "autogen.sh",
                                    "commands": [
                                        "autoreconf -si"
                                    ]
                                }
                            ],
                            "cleanup": [
                                "*"
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "name": "jsoncpp",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/open-source-parsers/jsoncpp.git",
                    "tag": "1.9.5"
                }
            ]
        },
        {
            "name": "curlpp",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/jpbarrette/curlpp.git",
                    "tag": "v0.8.1"
                }
            ]
        },
        {
            "name": "taglib",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/taglib/taglib.git",
                    "tag": "v1.12"
                }
            ]
        },
        {
            "name": "chromaprint",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=RelWithDebInfo",
                "-DBUILD_TOOLS=ON"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/acoustid/chromaprint.git",
                    "tag": "v1.5.1"
                }
            ]
        },
        {
            "name": "org.nickvision.tagger",
            "buildsystem": "meson",
            "config-opts": [
                "-Dbuildtype=release"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/nlogozzo/NickvisionTagger.git",
                    "tag": "2022.9.0-beta5"
                }
            ]
        }
    ]
}